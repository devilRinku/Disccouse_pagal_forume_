{{#if this.canCreateTopic}}
  <DButtonTooltip style="margin-right: 176px;">
    <:button>
      <DButton
        @action={{this.action}}
        @icon="plus"
        @disabled={{this.disabled}}
        @label={{this.label}}
        id="create-topic"
        class={{this.btnClass}}
      />
    </:button>
    <:tooltip>
      {{#if @disabled}}
        <DTooltip
          @icon="info-circle"
          @content={{i18n "topic.create_disabled_category"}}
        />
      {{/if}}
    </:tooltip>
  </DButtonTooltip>
{{/if}}
